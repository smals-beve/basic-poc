---
pagination:
  data: collections.apiSpecs
  size: 1
  alias: spec

permalink: "api/{{ spec.fileSlug }}/index.html"
layout: default

# Compute the page title _after_ `spec` is available
eleventyComputed:
  title: "{{ spec.data.info.title }}"
---

<div id="swagger-ui"></div>
<script src="/lib4ui/swagger-ui-bundle.js"></script>
<script src="/lib4ui/swagger-ui-standalone-preset.js"></script>
<script>
  SwaggerUIBundle({
    url: "/content/technical_specs/{{ spec.fileSlug }}.yaml",
    dom_id: "#swagger-ui",
    deepLinking: true,
    presets: [
      SwaggerUIBundle.presets.apis,
      SwaggerUIStandalonePreset
    ]
  });
</script>
