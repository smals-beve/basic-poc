---
pagination:
  data: collections.apiSpecs
  size: 1
  alias: spec

permalink: "api/{{ spec.fileSlug }}/index.html"
layout: default

# Compute the page title _after_ `spec` is available
eleventyComputed:
  title: "{{ spec.data.info.title }}"
---

<div id="swagger-ui"></div>

<!-- Swagger UI assets: will be prefixed by the HTML Base plugin -->
<script src="{{ '/lib4ui/swagger-ui-bundle.js' | url }}" charset="UTF-8"></script>
<script src="{{ '/lib4ui/swagger-ui-standalone-preset.js' | url }}" charset="UTF-8"></script>

<script>
  SwaggerUIBundle({
    // Injects /basic-poc/content/technical_specs/<slug>.yaml
    url: "{{ ('/content/technical_specs/' + spec.fileSlug + '.yaml') | url }}",
    dom_id: "#swagger-ui",
    deepLinking: true,
    presets: [
      SwaggerUIBundle.presets.apis,
      SwaggerUIStandalonePreset
    ]
  });
</script>
