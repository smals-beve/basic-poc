<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{{ title }} | e-Gov 3.0</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="{{ '/assets/css/bootstrap.min.css' | url }}">
    <link rel="stylesheet" href="{{ '/assets/styles.css' | url }}">

    {# API path (use |url to respect pathPrefix) #}
    {% set apiPrefix = '/api/' | url %}
    {% set pageUrl = page and page.url or '' %}
    {% set isApi = pageUrl and (pageUrl.indexOf(apiPrefix) == 0) %}
    {% set isApiRoot = pageUrl == apiPrefix %}

    {# Swagger UI CSS only on API detail pages, not /api/ root #}
    {% if isApi and not isApiRoot %}
        <link rel="stylesheet" href="{{ '/lib4ui/swagger-ui.css' | url }}">
    {% endif %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ '/' | url }}">e-Gov 3.0</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNav">
            <ul class="navbar-nav ms-auto align-items-center">
                <li class="nav-item"><a class="nav-link" href="{{ '/' | url }}">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ '/api/' | url }}">API Overview</a></li>

                {% if not isApi %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="langDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">Language</a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="langDropdown">
                            <li><a class="dropdown-item" href="{{ '/nl/' | url }}">Nederlands</a></li>
                            <li><a class="dropdown-item" href="{{ '/fr/' | url }}">Français</a></li>
                            <li><a class="dropdown-item" href="{{ '/en/' | url }}">English</a></li>
                        </ul>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid">
    <div class="row flex-nowrap">

        {# Sidebar ONLY on non-API pages #}
        {% if not isApi %}
            <aside class="col-auto p-0 sidebar-fixed bg-light">
                <div class="sidebar-scroll">
                    <div class="sidebar-body">
                        <a href="{{ '/' | url }}"
                           class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
                            <span class="fs-5 d-none d-sm-inline">Menu</span>
                        </a>
                        {% include "partials/sidebar-nav.njk" %}
                    </div>
                </div>
            </aside>
        {% endif %}

        {# Full width on API pages; column layout otherwise #}
        <main class="{% if isApi %}col-12{% else %}col ps-3 content-flex{% endif %} py-3">
            {% set manifests = { 'nl': manifest_nl, 'fr': manifest_fr, 'en': manifest_en } %}
            {% set manifestForLang = manifests[lang] %}

            {# ---- Back link for fields and nested blocks (no split/ternary) ---- #}
            {% set backUrl = '' %}
            {% set backLabel = '' %}

            {# Compute substring of page.url after '/<lang>/' #}
            {% set langPrefix = '/' ~ lang ~ '/' %}
            {% set afterLang = '' %}
            {% if pageUrl and pageUrl.indexOf(langPrefix) == 0 %}
                {% set afterLang = pageUrl.slice(langPrefix.length) %}
            {% endif %}

            {# Determine section type (fields|blocks) and remainder #}
            {% set type = '' %}
            {% set rest = '' %}
            {% if afterLang and afterLang.indexOf('fields/') == 0 %}
                {% set type = 'fields' %}
                {% set rest = afterLang.slice(7) %} {# len('fields/') = 7 #}
                {% elif afterLang and afterLang.indexOf('blocks/') == 0 %}
                {% set type = 'blocks' %}
                {% set rest = afterLang.slice(7) %} {# len('blocks/') = 7 #}
            {% endif %}

            {# Extract current id from rest #}
            {% set currentId = '' %}
            {% if rest %}
                {% set slashPos = rest.indexOf('/') %}
                {% if slashPos > -1 %}
                    {% set currentId = rest.slice(0, slashPos) %}
                {% else %}
                    {% set currentId = rest %}
                {% endif %}
            {% endif %}

            {# Resolve back destination based on manifest relations #}
            {% if currentId and manifestForLang and manifestForLang.blocks %}
                {% if type == 'fields' %}
                    {# Field page: go back to owning (sub)block #}
                    {% for top in manifestForLang.blocks %}
                        {% set matched = false %}
                        {% for f in top.fields or [] %}
                            {% if f.id == currentId %}
                                {% set backUrl = ('/' ~ lang ~ '/blocks/' ~ top.id ~ '/') | url %}
                                {% set backLabel = top.title or top.id %}
                                {% set matched = true %}
                            {% endif %}
                        {% endfor %}
                        {% if not matched %}
                            {% for sub in top.blocks or [] %}
                                {% for f in sub.fields or [] %}
                                    {% if f.id == currentId %}
                                        {% set backUrl = ('/' ~ lang ~ '/blocks/' ~ sub.id ~ '/') | url %}
                                        {% set backLabel = sub.title or sub.id %}
                                        {% set matched = true %}
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                        {% endif %}
                    {% endfor %}
                    {% elif type == 'blocks' %}
                    {# Nested block page: go back to parent top-level block #}
                    {% for top in manifestForLang.blocks %}
                        {% for sub in top.blocks or [] %}
                            {% if sub.id == currentId %}
                                {% set backUrl = ('/' ~ lang ~ '/blocks/' ~ top.id ~ '/') | url %}
                                {% set backLabel = top.title or top.id %}
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                {% endif %}
            {% endif %}

            {% if backUrl %}
                <div class="mb-3">
                    <a class="btn btn-outline-secondary btn-sm" href="{{ backUrl }}">← Back to {{ backLabel }}</a>
                </div>
            {% endif %}

            {{ content
            | stripOuterHtml
            | rewriteAssetUrls
            | rewriteDocAnchors(lang, pathPrefix, manifestForLang)
            | safe }}
        </main>

    </div>
</div>

<script src="{{ '/assets/js/bootstrap.bundle.min.js' | url }}"></script>
</body>
</html>
